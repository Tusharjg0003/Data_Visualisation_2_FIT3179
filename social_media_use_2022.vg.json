{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Problematic Social Media Use (15-year-olds, 2022)",
    "subtitle": "Girls report higher problematic social media use in nearly all countries.",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "anchor": "start"
  },
  "data": {
    "url": "data/social_media_transformed.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Percentage": "number"
      }
    }
  },
  "transform": [
    {
      "filter": "datum.Country != null && datum.Country != ''"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "rule",
        "stroke": "#ddd",
        "strokeWidth": 2,
        "opacity": 0.7
      },
      "encoding": {
        "y": {
          "field": "Country",
          "type": "nominal",
          "sort": {
            "field": "Percentage",
            "op": "mean",
            "order": "descending"
          },
          "title": "Country"
        },
        "x": {
          "aggregate": "min",
          "field": "Percentage",
          "type": "quantitative",
          "title": "% reporting problematic social media use"
        },
        "x2": {
          "aggregate": "max",
          "field": "Percentage"
        }
      }
    },
    {
      "mark": {
        "type": "circle",
        "size": 120,
        "stroke": "white",
        "strokeWidth": 2
      },
      "encoding": {
        "y": {
          "field": "Country",
          "type": "nominal",
          "sort": {
            "field": "Percentage",
            "op": "mean",
            "order": "descending"
          },
          "title": "Country",
          "axis": {
            "labelLimit": 100
          }
        },
        "x": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "% reporting problematic social media use",
          "scale": {
            "domain": [0, 30]
          }
        },
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": {
            "domain": ["Girl", "Boy"],
            "range": ["#E15759", "#4F8DBF"]
          },
          "title": "Gender",
          "legend": {
            "title": "Gender",
            "labelFontSize": 12,
            "titleFontSize": 12
          }
        },
        "tooltip": [
          {
            "field": "Country",
            "title": "Country",
            "type": "nominal"
          },
          {
            "field": "Gender",
            "title": "Gender",
            "type": "nominal"
          },
          {
            "field": "Percentage",
            "title": "Percentage (%)",
            "type": "quantitative",
            "format": ".1f"
          }
        ]
      }
    }
  ],
  "width": 600,
  "height": 800,
  "config": {
    "axis": {
      "labelFontSize": 10,
      "titleFontSize": 12
    },
    "legend": {
      "labelFontSize": 11,
      "titleFontSize": 12
    }
  }
}