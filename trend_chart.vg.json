{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Obesity Trends Over Time: Children & Adolescents (5-19 years)",
  "width": 800,
  "height": 300,
  "data": {
    "url": "data/obesity_trend_total.csv"
  },
  "transform": [
    {
      "filter": "datum.iso3 == 'USA' || datum.iso3 == 'CHN' || datum.iso3 == 'IND' || datum.iso3 == 'BRA' || datum.iso3 == 'MEX' || datum.iso3 == 'DEU' || datum.iso3 == 'GBR' || datum.iso3 == 'FRA' || datum.iso3 == 'JPN' || datum.iso3 == 'RUS' || datum.iso3 == 'CAN' || datum.iso3 == 'AUS' || datum.iso3 == 'ITA' || datum.iso3 == 'ESP' || datum.iso3 == 'KOR' || datum.iso3 == 'TUR' || datum.iso3 == 'SAU' || datum.iso3 == 'ARG' || datum.iso3 == 'POL' || datum.iso3 == 'NLD'"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 3
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "temporal",
          "title": "Year",
          "axis": {"format": "%Y", "titleFontSize": 14, "labelFontSize": 12}
        },
        "y": {
          "field": "prevalence",
          "type": "quantitative",
          "title": "Obesity Prevalence (%)",
          "scale": {"domain": [0, 50]},
          "axis": {"titleFontSize": 14, "labelFontSize": 12}
        },
        "color": {
          "field": "country",
          "type": "nominal",
          "title": "Country",
          "scale": {"scheme": "category20"},
          "legend": {
            "orient": "top-right",
            "titleFontSize": 12,
            "labelFontSize": 10,
            "columns": 2,
            "symbolType": "stroke"
          }
        },
        "strokeWidth": {
          "condition": {
            "test": "datum.country == 'United States' || datum.country == 'China' || datum.country == 'India'",
            "value": 4
          },
          "value": 2
        },
        "opacity": {
          "condition": {
            "test": "datum.country == 'United States' || datum.country == 'China' || datum.country == 'India'",
            "value": 1
          },
          "value": 0.7
        },
        "tooltip": [
          {"field": "country", "title": "Country", "type": "nominal"},
          {"field": "year", "title": "Year", "type": "temporal"},
          {"field": "prevalence", "title": "Prevalence (%)", "format": ".2f", "type": "quantitative"},
          {"field": "lower_ci", "title": "Lower CI", "format": ".2f", "type": "quantitative"},
          {"field": "upper_ci", "title": "Upper CI", "format": ".2f", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "fill": "black",
        "align": "left"
      },
      "data": {
        "values": [
          {"year": "2015", "prevalence": 25, "note": "↑ Rising Trend"},
          {"year": "2020", "prevalence": 45, "note": "⚠️ High Risk"}
        ]
      },
      "encoding": {
        "x": {"field": "year", "type": "temporal"},
        "y": {"field": "prevalence", "type": "quantitative"},
        "text": {"field": "note", "type": "nominal"}
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "background": "#f8f9fa"
  }
}
