{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global Obesity Prevalence Distribution (5-19 years)",
    "subtitle": "Darker colors indicate higher prevalence | Hover for details",
    "subtitleFontSize": 11,
    "subtitleColor": "#7f8c8d",
    "subtitleFontStyle": "italic"
  },
  "width": 800,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "data/countries.topojson",
    "format": {"type": "topojson", "feature": "countries1"}
  },
  "transform": [
    {
      "lookup": "properties.ISO_A3",
      "from": {
        "data": {"url": "data/obesity_map_with_risk.csv"},
        "key": "iso3",
        "fields": ["prevalence", "country", "lower_ci", "upper_ci", "risk_level", "risk_color"]
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5,
        "cursor": "pointer"
      },
      "encoding": {
        "color": {
          "field": "prevalence",
          "type": "quantitative",
          "title": "Obesity Prevalence (%)",
          "scale": {
            "scheme": "reds",
            "domain": [0, 50]
          },
          "legend": {
            "orient": "right",
            "titleFontSize": 14,
            "labelFontSize": 12,
            "titlePadding": 15,
            "labelPadding": 5,
            "gradientLength": 200,
            "gradientThickness": 20
          }
        },
        "tooltip": [
          {"field": "country", "title": "üåç Country", "type": "nominal"},
          {"field": "prevalence", "title": "üìä Obesity Prevalence", "format": ".1f", "type": "quantitative"},
          {"field": "risk_level", "title": "‚ö†Ô∏è Risk Level", "type": "nominal"},
          {"field": "lower_ci", "title": "üìâ Lower CI", "format": ".1f", "type": "quantitative"},
          {"field": "upper_ci", "title": "üìà Upper CI", "format": ".1f", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "#DC143C",
        "strokeWidth": 3,
        "fill": "transparent",
        "cursor": "pointer"
      },
      "encoding": {
        "tooltip": [
          {"field": "country", "title": "üåç Country", "type": "nominal"},
          {"field": "prevalence", "title": "üìä Obesity Prevalence", "format": ".1f", "type": "quantitative"},
          {"field": "risk_level", "title": "‚ö†Ô∏è Risk Level", "type": "nominal"},
          {"field": "lower_ci", "title": "üìâ Lower CI", "format": ".1f", "type": "quantitative"},
          {"field": "upper_ci", "title": "üìà Upper CI", "format": ".1f", "type": "quantitative"}
        ]
      },
      "transform": [
        {
          "filter": "datum.risk_level === 'High Risk'"
        }
      ]
    },
    {
      "data": {
        "values": [
          {"annotation": "Cook Islands: 41.0%", "lon": -120, "lat": -5},
          {"annotation": "Timor-Leste: 0.8%", "lon": 180, "lat": 10}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 11,
        "color": "#2c3e50",
        "fontWeight": "600",
        "align": "center"
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "annotation", "type": "nominal"}
      }
    },
    {
      "data": {
        "values": [
          {"lon": -120, "lat": -5, "lon2": -159.7, "lat2": -21.2},
          {"lon": 180, "lat": 10, "lon2": 125.7, "lat2": -8.8}
        ]
      },
      "mark": {
        "type": "rule",
        "stroke": "#e74c3c",
        "strokeWidth": 2,
        "strokeDash": [3, 3]
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "longitude2": {"field": "lon2", "type": "quantitative"},
        "latitude2": {"field": "lat2", "type": "quantitative"}
      }
    },
    {
      "data": {
        "values": [
          {"lon": -159.7, "lat": -21.2},
          {"lon": 125.7, "lat": -8.8}
        ]
      },
      "mark": {
        "type": "point",
        "size": 80,
        "filled": true,
        "fill": "#e74c3c",
        "stroke": "white",
        "strokeWidth": 2
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"}
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "background": "#f8f9fa",
    "tooltip": {
      "theme": "dark",
      "cornerRadius": 12,
      "fontSize": 13,
      "fontWeight": "normal",
      "padding": 16,
      "color": "white",
      "backgroundColor": "rgba(0, 0, 0, 0.85)",
      "border": "2px solid rgba(255, 255, 255, 0.3)",
      "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.3)"
    }
  }
}
